pai-width($height)
    $height / 7 * 5

pai-size($height)
    .pai
        display: inline-block
        height: $height
        width: pai-width($height)
        background: transparent
        img
            width: 100%
            height: 100%
            display: block
            border-radius: $height / 14
            box-shadow: 0 $height / 35 $height / 20 rgba(0,0,0,0.22)
        &:focus
            transform: translate(0, - $height / 7)
            outline: none
        &.blink
            animation: blink 0.5s infinite
        &.deleted
            transition: width 0.3s ease-out 0.1s
            opacity: 0
            width: 0px
        &.mopai
            opacity: 0.8
        &.dapai.mopai
            opacity: 0.6
