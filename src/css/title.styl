body.title
    color:      white
    background: #24170f
    margin: 0
    > *
        width: 800px
        margin: 0 auto
    #title
        display: block
    #navi
        width: 800px
        margin: 0 auto
    > .version
        display: block
        font-size: 16px
        font-family: defen-font
        text-align: right

#title
    display: none
    margin: 40px auto
    width: 800px
    max-width: 100%
    padding: 12px
    border-radius: 28px
    box-shadow: 0 10px 24px rgba(0,0,0,0.6), inset 0 2px 0 rgba(255,255,255,0.08), inset 0 -2px 0 rgba(0,0,0,0.2)
    background: radial-gradient(circle at 50% 35%, #1f7a3a 0%, #0e5a27 60%, #083c19 100%)
    background-clip: padding-box
    color:      white
    text-align: center
    font-family: text-font
    h1
        margin: 0px
        height: 150px
        img
            width: 600px
    .version
        font-family: defen-font
        font-size: 24px
        color: white
    .loading
        margin: 8px auto
        color: rgba(255,255,255,0.7)
        font-family: menu-font
        font-size: 16px
        animation: blink-text 2s infinite
    .presets
        margin: 8px auto
        font-family: text-font
        .subtitle
            margin: 0.5em 0 0.8em
            font-size: 18px
            color: rgba(255,255,255,0.9)
            font-family: menu-font
        .buttons
            display: grid
            grid-template-columns: 1fr
            gap: 12px
        .preset
            width: 100%
            box-sizing: border-box
            padding: 16px 20px
            border-radius: 10px
            font-size: 20px
            font-weight: 600
            color: #24170f
            background: linear-gradient(180deg, #f0b44a 0%, #d8901f 100%)
            cursor: pointer
            border: none
            outline: none
            box-shadow: 0 8px 18px rgba(0,0,0,0.35)
            transition: transform 0.06s ease, box-shadow 0.2s ease, background 0.2s ease
            &:hover
            &:focus
                background: linear-gradient(180deg, #f5c56a 0%, #e3a63e 100%)
                outline: none
            &:active
                transform: translateY(1px) scale(0.99)
                box-shadow: 0 5px 12px rgba(0,0,0,0.28)
    .login
        margin: 8px auto
        form
            margin: 0.5em
        input[type="submit"]
            cursor: pointer
        form.local
            input[name="name"]
                width: 8em
            input[type="submit"]
                border: none
                color: white
                background: #2a3f2a
                border-radius: 6px
                padding: 6px 12px
                &:hover
                    background: #355a35
        img
            width: 1.2em
            vertical-align: middle
        form:not(.local)
            input[type="submit"]
                width: 120px
                border: none
                background: none
                text-align: left
                padding: 0

@media screen and (max-width: 800px)
    body.title
        > *
            width: 100%
            box-sizing: border-box
        #title
            width: 100%
            max-width: 800px
            box-sizing: border-box
            padding-left: 12px
            padding-right: 12px
            h1
                height: auto
                img
                    width: 100%
                    height: auto
