body.title
    color:      white
    background: black
    margin: 0
    #title
        display: block
    #navi
        width: 800px
        margin: 0 auto
    > .version
        display: none

#title
    display: none
    margin: 40px auto
    width: 640px
    padding: 4px
    border-radius: 5px
    background: white
    color:      black
    text-align: center
    font-family: text-font
    h1
        margin: 0px
        height: 150px
        img
            width: 600px
    .version
        font-family: defen-font
        font-size: 24px
    .loading
        margin: 8px auto
        color: #666
        font-family: menu-font
        font-size: 16px
        animation: blink-text 2s infinite
    .presets
        margin: 8px auto
        font-family: text-font
        .subtitle
            margin: 0.5em 0 0.8em
            font-size: 18px
            color: #333
            font-family: menu-font
        .buttons
            display: grid
            grid-template-columns: 1fr
            gap: 12px
        .preset
            width: 100%
            box-sizing: border-box
            padding: 14px 18px
            border-radius: 8px
            font-size: 18px
            color: white
            background: #2a3f2a
            cursor: pointer
            border: none
            outline: none
            box-shadow: 0 6px 14px rgba(0,0,0,0.25)
            transition: transform 0.05s ease, box-shadow 0.2s ease, background 0.2s ease
            &:hover
            &:focus
                background: #355a35
                outline: none
            &:active
                transform: translateY(1px)
                box-shadow: 0 4px 10px rgba(0,0,0,0.22)
    .login
        margin: 8px auto
        form
            margin: 0.5em
        input[type="submit"]
            cursor: pointer
        form.local
            input[name="name"]
                width: 8em
            input[type="submit"]
                border: none
                color: white
                background: blue
        img
            width: 1.2em
            vertical-align: middle
        form:not(.local)
            input[type="submit"]
                width: 120px
                border: none
                background: none
                text-align: left
                padding: 0
